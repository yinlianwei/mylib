{% extends 'MylibberBackendBundle::layout.html.twig' %}

  {% block body %}
  <div class="alert alert-info">
  <h4>类别管理   </h4>
</div>
		 	{% set i=0 %}
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<th></th>
			<th><span class="label label-info">分类名称:</span></th>
			<th><span class="label label-info">删除分类:</span></th>
	{% for category in categories %}
	    {% set i=i+1 %}
	            <tr>
	            <td>{{ i }}</td>
	            <td>{{ category.categoryName }}</td>
	            <td><a href="{{ path('mylibber_backend_deleteCategory',{'id':category.Id})}}"><span class="label label-important">删除</span></a></td>
	{% endfor %}
	</table>

		<form action="{{ path('mylibber_backend_addCategoryNew')}}" method="post" {{ form_enctype(form) }} class="bloger"> 
		    {{ form_widget(form) }} 
		 
		    <input type="submit" / value="添加分类"> 
		</form> 
{% endblock %}