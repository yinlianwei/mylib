{% extends 'MylibberBackendBundle::layout.html.twig' %}

{% block body %}
  <div class="alert alert-info">
  <h4>用户管理   </h4>
</div>
 	{% set i=0 %}
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<th></th>
			<th><span class="label label-info">用户名:</span></th>
			<th><span class="label label-info">证件号码:</span></th>
			<th><span class="label label-info">管理员:</span></th>
			<th><span class="label label-info">删除用户:</span></th>
			<th><span class="label label-info">修改信息:</span></th></tr>
	{% for user in users %}
	    {% set i=i+1 %}
	            <tr>
	            <td>{{ i }}</td>
	            <td>{{ user.uName }}</td>
	            <td>{{ user.uBookId}}</td>
	            <td>{% if  user.uState == 1 %} <span class="label label-success">是</span></a>  {% else %} <span class="label">否</span> {% endif %}</td>
	            <td><a href="{{ path('mylibber_backend_deleteUser',{'id':user.Id}) }}"><i class="icon-remove"></a></td>
	            <td><a href="{{ path('mylibber_backend_updateUserForm',{'id':user.Id}) }}"><span class="label label-success">修改</span></a></td>
	{% endfor %}
	</table>

	<form action="{{ path('mylibber_backend_addUserNew')}}" method="post" {{ form_enctype(form) }} class="bloger"> 
	   {{ form_widget(form) }} 
		 
	    <input type="submit" /> 
	</form> 
{% endblock %}