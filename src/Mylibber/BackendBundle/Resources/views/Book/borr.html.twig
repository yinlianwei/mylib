        <?php echo $page ?> 
      <?php else: ?> 
        <a href="<?php echo url_for('category', $category) ?>?page=<?php echo $page ?>"><?php echo $page ?></a> 
      <?php endif; ?> 
    <?php endforeach; ?> 
  
    <a href="<?php echo url_for('category', $category) ?>?page=<?php echo $pager->getNextPage() ?>"> 
