{% extends 'MylibberMylibBundle::layout.html.twig' %}

{%  block title %} Contact {% endblock %}

{% block body %}
	<header> 
        <h1> Contact mylib </h1> 
    </header>
	{% if app.session.hasFlash('blogger-notice') %}
	    <div  class= "blogger-notice" >
	        {{ app.session.flash('blogger-notice') }}
	    </div>
	{% endif %}
    <p> Want to contact Mylib? </p>

    <form action="{{path('MylibberMylibBundle_contact')}}" method="post" {{form_enctype(form)}} class="bloger">
    	{{form_errors(form)}}
    	{{form_row(form.name)}}
    	{{form_row(form.email)}}
    	{{form_row(form.subject)}}
    	{{form_row(form.body)}}

    	{{form_rest(form)}}
    	<input type="submit" value="Subject"/>
    </form>
{% endblock%}